{
  "id": "callback",
  "version": "1.0",
  "name": "Workflow Callback example",
  "description": "An example of how to use callback state",
  "start": "printWaitMessage",
  "events": [
    {
      "name": "waitEvent",
      "source": "",
      "type": "wait"
    }
  ],
  "functions": [
    {
      "name": "callBack",
      "type": "rest",
      "operation": "specs/callback.yaml#callBack"
    },
    {
      "name": "printMessage",
      "type": "custom",
      "operation": "sysout"
    }
  ],
  "states": [
    {
      "name": "printWaitMessage",
      "type": "operation",
      "actions": [
        {
          "name": "printBeforeEvent",
          "functionRef": {
            "refName": "printMessage",
            "arguments": {
              "message": ".message"
            }
          }
        }
      ],
      "transition": "waitForEvent"
    },
    {
      "name": "waitForEvent",
      "type": "callback",
      "action": 
        {
        "functionRef": {
          "refName": "callBack",
          "arguments": {
            "uri": "http://localhost:8080/wait",
            "processInstanceId": "$WORKFLOW.instanceId"
          }
        }
      },
      "eventRef": "waitEvent",
      "transition": "finish"
    },
    {
      "name": "finish",
      "type": "operation",
      "actions": [
        {
          "name": "printAfterEvent",
          "functionRef": {
            "refName": "printMessage",
            "arguments": {
              "message": ".message"
            }
          }
        }
      ],
      "end": true
    }
  ]
}
