{
  "id": "plainJsonKnativeFunction",
  "version": "1.0",
  "name": "Test Knative function",
  "description": "This workflow tests a Knative function",
  "start": "start",
  "functions": [
    {
      "name": "greet",
      "type": "custom",
      "operation": "knative:custom-function-knative-service",
      "metadata": {
        "path": "/plainJsonFunction"
      }
    }
  ],
  "states": [
    {
      "name": "start",
      "type": "inject",
      "data": {
        "name": "Kogito"
      },
      "transition": "invokeFunction"
    },
    {
      "name": "invokeFunction",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "greet",
            "arguments": {
              "name": ".name"
            }
          }
        }
      ],
      "end": true
    }
  ]
}
