{
  "id": "knativeFunction",
  "version": "1.0",
  "name": "Test Knative function",
  "description": "This workflow tests a Knative function",
  "start": "start",
  "functions": [
    {
      "name": "greet",
      "type": "custom",
      "operation": "knative:custom-function-knative-service?path=/mypath&name=Kogito"
    }
  ],
  "states": [
    {
      "name": "start",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "greet",
            "arguments": {
              "name": ".name"
            }
          }
        }
      ],
      "end": true
    }
  ]
}
