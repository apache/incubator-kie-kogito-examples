package org.kie.kogito.queries;
unit AdultUnit;

import org.kie.kogito.queries.Person

rule CheckAdult when
    $p: /persons[ age >= 18 ]
then
    modify($p) { $p.setAdult(true) };
end

rule CheckNotAdult when
    $p: /persons[ age < 18 ]
then
    modify($p) { $p.setAdult(false) };
end

query FindAdults
    $p: /persons[ adult ]
end

