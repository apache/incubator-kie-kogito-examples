package org.kie.kogito.examples.polyglot;

import org.kie.kogito.examples.polyglot.Applicant;

rule "Is invalid age"
ruleflow-group "newapplicant"
when
    $a : Applicant( age < 18 )
then
    $a.setValid( false );
end

rule "Is valid age"
ruleflow-group "newapplicant"
when
    $a : Applicant( age >= 18 )
then
    $a.setValid( true );
end