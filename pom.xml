<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.kie.kogito.quickstarts</groupId>
  <artifactId>kogito-quickstarts</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Kogito :: Quickstarts</name>
  <description>Set of quickstart projects for Kogito</description>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>

    <!-- quarkus related -->
    <quarkus.version>1.3.0.Alpha2</quarkus.version>
    <!-- springboot related -->
    <springboot.version>2.2.0.RELEASE</springboot.version>
    <!-- kogito -->
    <kogito.version>8.0.0-SNAPSHOT</kogito.version>

    <!-- infinispan -->
    <infinispan.version>2.1.7.Final</infinispan.version>

    <swagger-plugin.version>2.1.0</swagger-plugin.version>
    <surefire-plugin.version>2.22.0</surefire-plugin.version>
    <version.deploy.plugin>2.8.2</version.deploy.plugin>
  </properties>

  <modules>
    <module>kogito-kafka-quickstart-quarkus</module>
    <module>kogito-kafka-quickstart-springboot</module>
    <module>kogito-infinispan-persistence-quarkus</module>
    <module>kogito-infinispan-persistence-springboot</module>
    <module>kogito-business-rules-quarkus</module>
    <module>kogito-business-rules-springboot</module>
    <module>kogito-scripts-quarkus</module>
    <module>kogito-scripts-springboot</module>
    <module>kogito-service-calls-quarkus</module>
    <module>kogito-service-calls-springboot</module>
    <module>kogito-service-rest-call-quarkus</module>
    <module>kogito-service-rest-call-springboot</module>
    <module>kogito-usertasks-quarkus</module>
    <module>kogito-usertasks-springboot</module>
    <module>kogito-usertasks-custom-lifecycle-quarkus</module>
    <module>kogito-usertasks-custom-lifecycle-springboot</module>
    <module>kogito-usertasks-with-security-oidc-keycloak</module>
    <module>kogito-usertasks-with-security-quarkus</module>
    <module>kogito-usertasks-with-security-springboot</module>
    <module>kogito-timer-quarkus</module>
    <module>kogito-timer-springboot</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>${version.deploy.plugin}</version>
          <configuration>
            <retryFailedDeploymentCount>10</retryFailedDeploymentCount>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
