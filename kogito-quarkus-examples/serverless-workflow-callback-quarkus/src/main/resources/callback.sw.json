{
  "id": "callback",
  "version": "1.0",
  "name": "Workflow Callback example",
  "description": "An example of how to use callback state",
  "start": "createModel",
  "events": [
    {
      "name": "resumeEvent",
      "source": "",
      "type": "resume"
    },
    {
      "name": "waitEvent",
      "source": "",
      "type": "wait"
    }
    
  ],
  "functions": [
    {
      "name": "printInstanceId",
      "metadata": {
        "interface": "org.kie.kogito.examples.PrintService",
        "operation": "printKogitoProcessId",
        "type": "service"
      }
    }
  ],
  "states": [
     {
      "name": "createModel",
      "type": "inject",
      "data": {
        "move": "This is the initial data in the model"
      },
      "transition": "waitForEvent"
    },
    {
      "name": "waitForEvent",
      "type": "callback",
      "action": 
        {
          "name": "publishAction",
          "eventRef": {
            "triggerEventRef": "resumeEvent",
            "data": "{move: .move}"
          }
        },
        "eventRef" : "waitEvent",
        "eventDataFilter" : {
           "data" : ".result",
           "toStateData" : ".move"
        },
        "onErrors": [
        {
          "error": "execution error",
          "code": "java.util.concurrent.CompletionException",
          "end": true
        }
        ],
        "transition": "finish"
    },
    {
      "name": "finish",
      "type": "operation",
      "actions": [
        {
          "name": "printInstanceId",
          "functionRef": {
            "refName": "printInstanceId"
          }
        }
      ],
      "end": {
        "terminate": "true"
      }
    }
  ]
}